{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist/",
    "rootDir": ".",
    "noEmit": false,
    "resolveJsonModule": true,

    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.mock.ts",
  ]
}
