{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "rootDir": ".",
    "noEmit": true,
    "resolveJsonModule": true,

    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,

    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.mock.ts",
  ]
}
